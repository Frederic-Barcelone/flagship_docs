<h2 class="breadcrumb">
  <%= link_to "Home", root_path %> / <%= link_to 'Groups', groups_path %>
</h2>
<h1 class="main-title">
  <%=h @group.name %>
  <% if @group.allowed_to_save %>
  <%= link_to 'Edit', edit_group_path(@group), :class => "link-button" %>
  <% end %>
</h1>
<div class="hr_dl flush"><%= image_tag("bl.png", :alt => "") %></div>
<div id="mc-indent" class="mc-indent">
  <% if @group.leader %><h2>Leader: <%= link_to @group.leader.full_name,@group.leader %><% end %> </h2>
  <h2>Members:</h2>
    <ul class="bulleted_list">
      <% @group.users.each do |user| %>
      <li><%= link_to user.full_name,user %></li>
      <% end %>
    </ul>
  <h2>Categories:</h2>
    <ul class="bulleted_list">
      <% @group.categories.each do |category| %>
      <li><%= link_to category.name,category %></li>
      <% end %>
    </ul>
</div>
