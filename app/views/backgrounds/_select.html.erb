<div>
	<ul class="img_sel">
	<% Background.all.each do |background| %>
	  <li><%= form.radio_button(:background_id, background.id) %>&nbsp;&nbsp;&nbsp;<%= image_tag background.image(:thumb), :height => 70 %>&nbsp;&nbsp;&nbsp;<%= background.image_file_name %></li>
	<% end %>
	  <li>
            <%= form.radio_button(:background_id, "") %>&nbsp;&nbsp;&nbsp;
            <% form.fields_for :background do |background| %>
              <%= render :partial => 'backgrounds/form', :locals => {:form => background } %>
            <% end %>
          </li>
	</ul>
</div>
<div style="clear:both;"></div>
