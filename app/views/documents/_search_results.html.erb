<p style="text-align:right; font-size:1.1em; margin:8px 12px;"><%= link_to "All Results", search_documents_path(:query => params[:query]) %></p>
<h1>Matched Documents</h1>
<ol>
  <% if @documents.empty? %>
    <li class="none">
      <div style="float:right; width:315px; padding:8px 0px;">
        <h1>No Documents Found</h1>
      </div>
      <div style="clear:both;"></div>
    </li>
  <% else %>
    <% for document in @documents %>
	<li>
		<% link_to document do %>
			<div style="float:left; width:60px;"><%= image_tag("icons/icon_#{document.current_revision.type}_50.png", :alt => "", :width => 50) %></div>
			<div style="float:right; width:315px; padding:8px 0px;">
				<h1><%=h document.title %></h1>
        <h2><%=h document.category.name unless document.category.nil? %></h2>
        <h3><%= document.excerpts.description%></h3>
      
      </div>
			<div style="clear:both;"></div>
		<% end %>
	</li>
    <% end %>
  <% end %>
</ol>
<h1>Matched Categories</h1>
<ol>
  <% if @categories.empty? %>
        <li class="none">
          <div style="float:right; width:315px; padding:8px 0px;">
            <h1>No Categories Found</h1>
          </div>
          <div style="clear:both;"></div>
        </li>
  <% else %>
    <% for category in @categories %>
	<li>
		<% link_to category do %>
			<div style="float:left; width:60px;"><%= image_tag("icons/icon_folder_50.png", :alt => "", :width => 50) %></div>
			<div style="float:right; width:315px; padding:8px 0px;">
				<h1><%=h category.name %></h1>
				<h2><%=truncate(h(category.description), :length => 40) %></h2>
			</div>
			<div style="clear:both;"></div>
		<% end %>
	</li>
    <% end %>
  <% end %>
  t
</ol>
