<h1>New document</h1>

<% form_for(@document, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => f %>
  
  <% f.fields_for :revisions do |revision| %>
    <%= render :partial => 'revisions/form', :locals => {:form => revision} %>
  <% end %>  

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', documents_path %>
