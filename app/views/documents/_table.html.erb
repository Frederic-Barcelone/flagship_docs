<%= link_to 'View in Grid', category_path(:type => 'grid', :anchor => "doclist"), :class => "link-button update_holder", :style => "font-size:0.6em;" %>
<br /><br />
<table cellpadding="0" cellspacing="0" width="100%" class="docs">
  <thead>
    <tr class="cat_title">
      <th style="text-align:right;">Title</th>
      <th>Link</th>
      <th style="text-align:left;">Description</th>
      <th>Downloads</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% documents.each do |document| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><% link_to document do %><h2><%= document.title %></h2><% end %></td>
        <td class="doc_img">
          <% unless document.revisions.current.nil? %>
            <% link_to download_document_revision_path(document, 'current') do %>
              <%= image_tag("icons/icon_#{document.revisions.current.first.short_type}.png", :size=>"40x40", :alt => "Download File") %>
            <% end %>
          <% end %>
        </td>
        <td><p><%= document.description %></p></td>
        <td><%= document.download_count %></td>
        <td><%= document.updated_at.strftime('%D') unless document.updated_at.nil? %></td>
        <td>
          <span>
            <%= link_to 'Edit', edit_document_path(document), :class => 'edit-link' %>&nbsp;
            <%= link_to 'Remove', document_path(document), :confirm => 'Are you sure you want to remove this document?', :method => :delete, :class => 'cancel-link' %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="clear:both;"></div>
