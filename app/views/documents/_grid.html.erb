<% if (defined? is_ajax) && is_ajax %>
  <%= link_to 'View in Table', category_path(:type => 'table', :anchor => "doclist"), :class => "link-button update_holder", :style => "font-size:0.6em;" %>
<% end %>
<br /><br />
<ul class="iconlist">
  <% documents.each do |document| %>
  <li>
    <% link_to document do %>
      <div class="iconlist_padding">
        <div class="ins">
          <div class="type-folder"><%= image_tag("icons/icon_#{document.current_revision.type}.png", :alt => document.title) %></div>
        </div>
        <h2><%=h document.title %></h2>
      </div>
    <% end %>
  </li>
  <% end %>
</ul>
<div style="clear:both;"></div>
